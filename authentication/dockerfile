# Use Maven to build the application
FROM maven:3.8.4-openjdk-11-slim AS build

# Set the working directory inside the container
WORKDIR /app

# Copy the pom.xml and the source code
COPY pom.xml .
COPY src ./src

# Build the Java application
RUN mvn clean package -DskipTests

# Use a JDK image to run the application
FROM openjdk:11-jre-slim

# Set the working directory inside the container
WORKDIR /app

# Copy the jar file from the build container
COPY --from=build /app/target/hello-world-1.0-SNAPSHOT.jar hello-world.jar

# Expose the port the application runs on (optional, not needed for this app)
EXPOSE 8080

# Run the application
CMD ["java", "-jar", "hello-world.jar"]
